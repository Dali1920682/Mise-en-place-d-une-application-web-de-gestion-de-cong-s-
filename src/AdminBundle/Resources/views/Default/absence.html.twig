{% extends 'base.html.twig' %}

{%block body%}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/bootstrap-select.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/css/bootstrap-select.min.css">




    <div class="row">
        <div class="col-sm-12">
         <div class="card-box">
          <div class="container bootstrap snippet">
           <div class="panel-body inf-content">
            <div class="col-lg-15">
              <h3 align="center" class="card-title text-info pt-2 px-3 text-center mb-0">GÃ©rer Absence Personnel</h3> 
        
              {% if error %}
              <div class="alert alert-danger">{{ error }}</div>
              {% endif %}

              {% for message in app.flashes('success') %}
              <div class="alert alert-success">
                  {{ message }}
              </div>
          {% endfor %}

              <div class="col-md-4" style="margin-left:400px;">
              <form method="post" id="multiple_select_form">
                <select name="user" id="user" class="form-control selectpicker" data-live-search="true" >
                      {% for emp in user_list %}
                      <option >{{ emp.getUsername }}</option>
                      {% endfor %}
                
                </select>
                
                <input type="hidden" name="hidden_framework" id="hidden_framework" />
                <button type="submit" name="submit" class="btn btn-primary" width= 100%;>Envoyer</button>
              </form>
            </div>
      </div>
            
    
     
     <script>
     $(document).ready(function(){
      $('.selectpicker').selectpicker();
     
      $('#user').change(function(){
       $('#hidden_framework').val($('#user').val());
      });
     
      $('#multiple_select_form').on('submit', function(event){
       event.preventDefault();
       if($('#user').val() != '')
       {
        var form_data = $(this).serialize();
        $.ajax({
         method:"POST",
         data:form_data,
         success:function(data)
         {
          //console.log(data);
          $('#hidden_framework').val('');
          $('.selectpicker').selectpicker('val', '');
          alert(data);
         }
        })
       }
       else
       {
        alert("Please select personnel");
        return false;
       }
      });
     });
     </script>
{% endblock %}